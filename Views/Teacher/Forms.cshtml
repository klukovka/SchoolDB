@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

@{
    ViewBag.Title = "Forms";
}

@using (Html.BeginForm())
{
    if (ViewBag.MyStudents.Count != 0)
    {

        <h2>Мій клас</h2>
        <table class="table">
            <tr>
                <th>Клас: </th>
                <th>@ViewBag.MyForm.Form_id</th>
            </tr>
            <tr>
                <th>Спрямування: </th>
                <th>@ViewBag.MyForm.Direction</th>
            </tr>
            <tr>
                <td>
                    @Html.ActionLink("Завантажити інформацію", "DownloadForms", new { id = @ViewBag.MyForm.Form_id })
                </td>
            </tr>

        </table>
        <h2>Список учнів</h2>
        <table class="table">
            <tr>
                <th>ПІБ учня</th>
                <th>Дата народження</th>
                <th>Стать</th>
                <th>Адреса</th>
                <th>Соціальний статус</th>
                <th>Харчування в їдальні</th>
                <th>Електронна пошта</th>
                <th>Електронна пошта одного з батьків</th>
                <th></th>
            </tr>
            <tr>
                <th>
                    <div class="col-md-10">
                        @Html.TextBox("MyStudent_name", $"{@ViewBag.MyStudent_name}", new { @class = "form-control", @style="width: 200px"  })
                    </div>
                </th>
                <th>
                    <div class="col-md-10">

                        Від:<input type="date" value="@ViewBag.MyStudent_birthday_start" class="form-control"
                                   name="MyStudent_birthday_start" id="MyStudent_birthday_start" style="width:auto"> <br />
                        До:<input type="date" value="@ViewBag.MyStudent_birthday_end" class="form-control"
                                  name="MyStudent_birthday_end" id="MyStudent_birthday_end" style="width:auto">

                    </div>
                </th>
                <th>
                    <div class="col-md-10">
                        <select name="MyStudent_sex" id="MyStudent_sex" class="form-control" style="width:auto">
                            <option>@ViewBag.MyStudent_sex</option>
                            @foreach (var item in ViewBag.Sex)
                            {
                                if (item != ViewBag.MyStudent_sex)
                                {
                                    <option>@item</option>

                                }

                            }
                        </select>
                    </div>
                </th>
                <th>
                    <div class="col-md-10">
                        @Html.TextBox("MyStudent_adress", $"{ViewBag.MyStudent_adress}", new { @class = "form-control", @style="width: 200px"  })
                    </div>
                </th>
                <th>
                    <div class="col-md-10">
                        <select name="MyPrivilege_id" id="MyPrivilege_id" class="form-control" style="width: 200px" >
                            <option selected="selected">@ViewBag.MyPrivilege_id</option>
                            @foreach (var item in ViewBag.Privilages)
                            {
                                if (item != ViewBag.MyPrivilege_id)
                                {
                                    <option>@item</option>

                                }

                            }
                        </select>
                    </div>
                </th>
                <th>
                    <div class="col-md-10">
                        <div class="col-md-10">
                            <select name="MyStudent_dinning" id="MyStudent_dinning" class="form-control" style="width:auto">
                                <option>@ViewBag.MyStudent_dinning</option>
                                @foreach (var item in ViewBag.Dinning)
                                {
                                    if (item != ViewBag.MyStudent_dinning)
                                    {
                                        <option>@item</option>

                                    }

                                }
                            </select>
                        </div>
                    </div>
                </th>
                <th>
                    <div class="col-md-10">
                        @Html.TextBox("MyStudent_post", $"{@ViewBag.MyStudent_post}", new { @class = "form-control", @style="width: 200px"  })
                    </div>
                </th>
                <th>
                    <div class="col-md-10">
                        @Html.TextBox("MyStudent_post_parent", $"{@ViewBag.MyStudent_post_parent}", new { @class = "form-control", @style="width: 200px"  })
                    </div>
                </th>
                <th>
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Фільтр" class="btn btn-default" />
                    </div>
                </th>
            </tr>
            @foreach (var item in ViewBag.MyStudents)
            {
                <tr>
                    <td>@item.Student_name</td>
                    <td>@item.Student_birthday.ToString("yyyy-MM-dd")</td>
                    <td>@item.Student_sex</td>
                    <td>@item.Student_adress</td>
                    <td>@item.Privilege_id</td>
                    <td>@item.Student_dinning</td>
                    <td>@item.Student_post</td>
                    <td>@item.Student_post_parents</td>
                    <td></td>
                </tr>
            }
        </table>
    }

    <h2>Класи викладання</h2>
    <table class="table">
        <tr>
            <th>Клас</th>
            <th>ПІБ учня</th>
            <th>Дата народження</th>
            <th>Адреса</th>
            <th>Стать</th>
            <th>Електронна пошта</th>
        </tr>
        <tr>
            <th>
                <div class="col-md-10">
                    <select name="Student_form" id="Student_form" class="form-control" , style="width: 75px" >
                        <option selected="selected">@ViewBag.Form</option>
                        @foreach (var item in ViewBag.Forms)
                        {
                            if (item != @ViewBag.Form)
                            {
                                <option>@item</option>
                            }
                        }
                    </select>
                </div>
            </th>
            <th>
                <div class="col-md-10">
                    @Html.TextBox("Student_name", $"{@ViewBag.Student_name}", new { @class = "form-control" })
                </div>
            </th>
            <th>
                <div class="col-md-10">

                    Від:<input type="date" value="@ViewBag.Student_birthday_start" class="form-control"
                               name="Student_birthday_start" id="Student_birthday_start" style="width:auto"> <br />
                    До:<input type="date" value="@ViewBag.Student_birthday_end" class="form-control"
                              name="Student_birthday_end" id="Student_birthday_end" style="width:auto">

                </div>
            </th>
            <th>
                <div class="col-md-10">
                    @Html.TextBox("Student_adress", $"{ViewBag.Student_adress}", new { @class = "form-control", @style="width: 200px"  })
                </div>
            </th>
            <th>
                <div class="col-md-10">
                    <select name="Student_sex" id="Student_sex" class="form-control" style="width:auto">
                        <option>@ViewBag.Student_sex</option>
                        @foreach (var item in ViewBag.Sex)
                        {
                            if (item != ViewBag.Student_sex)
                            {
                                <option>@item</option>

                            }

                        }
                    </select>
                </div>
            </th>
            <th>
                <div class="col-md-10">
                    @Html.TextBox("Student_post", $"{@ViewBag.Student_post}", new { @class = "form-control", @style="width: 200px"  })
                </div>
            </th>
            <th>
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Фільтр" class="btn btn-default" />
                </div>
            </th>
        </tr>
        @foreach (var item in ViewBag.Students)
        {
            <tr>
                <td>@item.Student_form</td>
                <td>@item.Student_name</td>
                <td>@item.Student_birthday.ToString("yyyy-MM-dd")</td>
                <td>@item.Student_adress</td>
                <td>@item.Student_sex</td>
                <td>@item.Student_post</td>
                <td></td>
            </tr>
        }
    </table>

}