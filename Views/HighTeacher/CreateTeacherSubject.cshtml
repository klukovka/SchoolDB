
@{
    Layout = "~/Views/Shared/_HighTeacherLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateTeacherSubject</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>Створення</h2>     

            <div class="form-group">
                <label class="control-label col-md-2">Вчитель</label>
                <div class="col-md-10">

                    <select name="Teacher_id" id="Teacher_id" class="form-control">
                        @foreach (var item in ViewBag.Teachers)
                        {
                            <option value="@item.Teacher_id">@item.Teacher_name</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Предмет</label>
                <div class="col-md-10">
                    <select name="Subjects" id="Subjects" class="form-control">
                        @foreach (var item in ViewBag.Subjects)
                        {
                            <option>@item</option>
                        }
                    </select>
                </div>
            </div>

          

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Зберегти" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Назад", "Teacher_Subject")
    </div>
</body>
</html>
