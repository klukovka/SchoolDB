
@{
    Layout = "~/Views/Shared/_HighTeacherLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateTimetable</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Створення</h2>


        <div class="form-group">
            <label class="control-label col-md-2">День тижня</label>
            <div class="col-md-10">

                <select name="Day_Of_Week" id="Day_Of_Week" class="form-control">
                    <option value="Monday">Понеділок</option>
                    <option value="Tuesday">Вівторок</option>
                    <option value="Wednesday">Середа</option>
                    <option value="Thursday">Четвер</option>
                    <option value="Friday">П'ятниця</option>

                </select>
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2">Номер уроку</label>
            <div class="col-md-10">

                <select name="Lesson_id" id="Lesson_id" class="form-control">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>

                </select>
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2">Клас</label>
            <div class="col-md-10">
                <select name="Form_id" id="Form_id" class="form-control">
                    @foreach (var item in ViewBag.Forms)
                    {
                        <option>@item</option>
                    }
                </select>
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2">Вчитель та предмет</label>
            <div class="col-md-10">

                <select name="Teacher_Subject_id" id="Teacher_Subject_id" class="form-control">
                    @foreach (var item in ViewBag.TS)
                    {
                        <option value="@item.Teacher_Subject_id">@item.Subject - @item.Teachers.Teacher_name</option>
                    }
                </select>
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Кабінет</label>
            <div class="col-md-10">
                @Html.TextBox("Classroom", $"Введіть номер кабінету", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Зберегти" class="btn btn-default" />
            </div>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Назад", "Timetable")
    </div>
</body>
</html>
